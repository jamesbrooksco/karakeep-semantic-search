# Karakeep connection
KARAKEEP_URL=http://localhost:3000
KARAKEEP_API_KEY=your-karakeep-api-key

# Embeddings - use ONE of these:
# Option 1: OpenAI (recommended - fast and high quality)
OPENAI_API_KEY=sk-your-openai-key

# Option 2: Ollama (local, free, but slower)
# OLLAMA_URL=http://localhost:11434

# Embedding model (defaults shown)
# For OpenAI: text-embedding-3-small, text-embedding-3-large
# For Ollama: nomic-embed-text, mxbai-embed-large
EMBEDDING_MODEL=text-embedding-3-small

# Sync settings
SYNC_INTERVAL_MINUTES=5

# Server
PORT=3001
LOG_LEVEL=info

# Qdrant (if running externally)
# QDRANT_PORT=6333
